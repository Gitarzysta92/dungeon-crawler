{
  "name": "game-logic",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/game-logic/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/projects/game-logic",
        "main": "projects/game-logic/src/index.ts",
        "tsConfig": "projects/game-logic/tsconfig.json",
        "assets": ["projects/game-logic/*.md"]
      }
    },
    "start:example": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --project tsconfig.app.json src/game/dungeon-game.example.ts",
        "cwd": "projects/game-logic"
      }
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --watch",
        "cwd": "projects/game-logic"
      }
    },
    "export": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm pack",
        "cwd": "projects/game-logic"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "projects/game-logic/jest.config.js",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": []
}
